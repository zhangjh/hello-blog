/*
 * 自适应宽度
 */
@import "../../../source/vendors/notie/notie.min.css";

@media (max-width: 767px) {
	#comment-wrap {
		width: 90% !important;
	}
}

#comment-wrap {
	width: 700px;
	margin: 0 auto;
	margin-top: 20px;
}

.border {
	border-color: #e74851;
}

.header-login,header-user {
	display: none;
}

.header-login {
	border-radius: 42px;
	width: 40px;
	height: 40px;
	border: 1px solid;
	text-align: center;
	line-height: 42px;
	color: #e74851;
	cursor: pointer;
	position: relative;
	z-index: 1;
	margin-bottom: -10px;
	left: 15px;
	background: white;
}

.header-user {
  color: #e74158;
  font-size: 16px;
}

.comment-body: {
	height: 200px;
}

.comment-body textarea {
	width: 100%;
	height: 100px;
	border-radius: 6px;
}

.comment-footer button {
	float: right;
	border-radius: 6px;
	background-color: #e74851;
	color: antiquewhite;
	width: 100px;
}

.comment-list {
	margin-top: 40px;
}

.comment-title {
	font-size: 16px;
	width: 66px;
	height: 29px;
	color: #e74851;
	line-height: 30px;
	text-align: center;
	float: left;
	border: 1px solid #e74851;
	border-radius: 6px 6px 0 0;
	border-bottom: none;
}

.comment-list-border {
	background-color: #e74158;
	position: relative;
	height: 1px;
	/*left: 66px;*/
	bottom: -29px;
}

.comment-sum {
	float: right;
	font-size: 14px;
	color: #e74158;
}

.comment-sum span {
	font-size: 20px;
	font-weight: bold;
}

  .content-item {
    clear: both;
    border-bottom: 1px dashed #e5e5e5;
  }

.user-info .user {
	color: #e74158;
	//float: left;
	padding: 5px 7px 0 0;
  cursor: pointer;
  font-weight: bold;
  border-bottom: none;
}

.user-info .time {
	float: right;
	padding: 5px 0 0;
	color: silver;
}

.content {
	clear: both;
  padding: 0 20px;
}

.content-item pre {
  background-color: #eaeaea;
  color: black;
}

.operate {
	text-align: right;
  cursor: pointer;
}

.comment-empty {
  background-color: #f0f0f0;
  text-align: center;
  opacity: 5;
  margin-top: 10%;
  height: 30px;
  color: #999;
  display: none;
}

.login-modal {
  position: absolute;
  left: 50%;
  background: white;
  z-index: 2;
  @media (max-width: 767px){
    width: 80%;
    margin-left: -45%;
  }
  width: 500px;
  margin-left: -250px;
  padding: 5px 20px;
  -webkit-box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
  -moz-box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
  box-shadow: 0 5px 15px rgba(0, 0, 0, .5);
  display: none;
}

.modal-header {
  border-bottom: 1px solid #e5e5e5;
}

  .modal-body div {
    margin: 10px 0;
  }
.modal-body span {
  display: inline-block;
  width: 80px;
}

.modal-body input {
  width: 80%;
  border-top: none;
  border-left: none;
  border-right: none;
  height: 30px;
}

.modal-footer button {
  background-color: #337ab7;
  color: white;
  border-color: #2e6da4;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  margin: 10px 0;
}
